{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../linkedin/"
    },
    {
      "path": "../openai-analyzer/"
    },
    {
      "path": "../equalizer/"
    }
  ]
}
